<%- include('partials/header', { pageTitle: "Editar Projeto", dados: {} }) %>

<section class="py-12 bg-slate-900 text-white">
    <div class="container mx-auto max-w-xl px-4">
        <h1 class="text-3xl font-bold mb-6">Editar Projeto</h1>

        <form action="/projetos/<%= projeto.id %>" method="POST" class="bg-slate-800 p-4 rounded">
            <input type="text" name="nome" value="<%= projeto.nome %>" required class="w-full p-2 mb-3 rounded text-black">
            <textarea name="descricao" required class="w-full p-2 mb-3 rounded text-black"><%= projeto.descricao %></textarea>
            <button class="bg-green-600 px-4 py-2 rounded text-white">Salvar Alterações</button>
        </form>
    </div>
</section>

<%- include('partials/footer', { dados: {} }) %>
