<%- include('partials/header') %>

<section id="introducao" class="text-center my-5 p-5 bg-white rounded shadow-sm">
    <img src="<%= dadosGerais.imagemPerfil %>" class="rounded-circle mb-3" width="150" height="150" alt="Foto de <%= dadosGerais.nomeCompleto %>">
    <h1><%= dadosGerais.introducaoTitulo %></h1>
    <p class="lead"><%= dadosGerais.introducaoParagrafo1 %></p>
    <p><%= dadosGerais.introducaoParagrafo2 %></p>
</section>

<section id="curriculo" class="my-5">
    <h2 class="text-center mb-4">Minha Trajetória</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Formação Acadêmica</h3>
            <% formacao.forEach(item => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.curso %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= item.instituicao %></h6>
                        <p class="card-text"><%= item.periodo %></p>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="col-md-6">
            <h3>Experiências</h3>
            <% experiencias.forEach(item => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.cargo %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= item.empresa %> (<%= item.periodo %>)</h6>
                        <p class="card-text"><%= item.descricao %></p>
                    </div>
                </div>
            <% }) %>
            <a href="/experiencias" class="btn btn-primary">Ver Todas as Experiências</a>
        </div>
    </div>
</section>

<section id="habilidades" class="my-5 p-5 bg-white rounded shadow-sm">
    <h2 class="text-center mb-4">Minhas Competências</h2>
     <% habilidades.forEach(habilidade => { %>
        <div>
            <label><%= habilidade.nome %></label>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: <%= habilidade.percentual %>%;" aria-valuenow="<%= habilidade.percentual %>" aria-valuemin="0" aria-valuemax="100"><%= habilidade.percentual %>%</div>
            </div>
        </div>
    <% }) %>
    <div class="text-center mt-3">
        <a href="/habilidades" class="btn btn-primary">Gerenciar Habilidades</a>
    </div>
</section>

<section id="projetos-recentes" class="my-5">
    <h2 class="text-center mb-4">Projetos Recentes</h2>
    <div class="row">
        <% projetos.forEach(projeto => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><%= projeto.nome %></h5>
                        <p class="card-text"><%= projeto.descricao %></p>
                    </div>
                    <div class="card-footer">
                        <a href="/projetos/<%= projeto.id %>/edit" class="btn btn-secondary btn-sm">Editar</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="text-center">
        <a href="/projetos" class="btn btn-primary">Ver Todos os Projetos</a>
    </div>
</section>

<%- include('partials/footer') %>