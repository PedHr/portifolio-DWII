<%- include('partials/header', { pageTitle: pageTitle, dados: dados }) %>

<section id="introducao" class="py-12 bg-white rounded-lg shadow-xl mb-12">
    <div class="container mx-auto px-6 flex flex-col md:flex-row items-center">
        <div class="md:w-1/3 mt-8 md:mt-0">
            <img src="<%= dados.introducao.imagemPerfil %>" alt="Foto de <%= dados.geral.nomeCompleto %>" class="rounded-full shadow-lg mx-auto w-64 h-64 object-cover">
        </div>
        <div class="md:w-2/3 md:pr-12 text-center md:text-left">
            <h1 class="text-4xl font-bold text-gray-800 mb-4"><%= dados.introducao.titulo %></h1>
            <p class="text-lg text-gray-600 mb-4"><%= dados.introducao.paragrafo1 %></p>
            <p class="text-lg text-gray-600 mb-6"><%= dados.introducao.paragrafo2 %></p>
            <a href="#contato" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition duration-300">
                Entre em Contato
            </a>
        </div>
        <% if (dados.introducao.imagemPerfil) { %>
        <% } %>
    </div>
</section>

<section id="curriculo" class="py-12 mb-12">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-10"><%= dados.curriculo.titulo %></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-xl font-semibold text-blue-600 mb-4">Formação Acadêmica</h3>
            <ul class="space-y-3">
                <% dados.curriculo.formacaoAcademica.forEach(formacao => { %>
                    <li class="text-gray-700">
                        <strong class="block"><%= formacao.curso %></strong>
                        <span class="text-sm text-gray-500"><%= formacao.instituicao %> (<%= formacao.periodo %>)</span>
                    </li>
                <% }) %>
            </ul>
        </div>

        
        <% if (dados.curriculo.experiencias && dados.curriculo.experiencias.length > 0) { %>
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 md:col-span-2 lg:col-span-1">
            <h3 class="text-xl font-semibold text-blue-600 mb-4">Experiências Profissionais</h3>
            <ul class="space-y-4">
                <% dados.curriculo.experiencias.forEach(exp => { %>
                    <li class="text-gray-700">
                        <strong class="block"><%= exp.cargo %></strong>
                        <span class="text-sm text-gray-600 font-medium"><%= exp.empresa %> (<%= exp.periodo %>)</span>
                        <p class="text-sm text-gray-500 mt-1"><%= exp.descricao %></p>
                    </li>
                <% }) %>
            </ul>
        </div>
        <% } %>
    </div>
</section>

<section id="habilidades" class="py-16 bg-gradient-to-br from-gray-50 to-blue-50 rounded-lg shadow-2xl mb-16">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">
            <%= dados.habilidades.titulo %>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            
            <div>
                <h3 class="text-2xl font-semibold text-blue-700 mb-6 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                    Habilidades Técnicas (Hard Skills)
                </h3>
                <ul class="space-y-3">
                    <% dados.habilidades.tecnicas.forEach(skill => { %>
                        <li class="bg-white p-4 rounded-lg shadow-md transition-all duration-300 hover:shadow-xl hover:scale-105">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-800 font-medium"><%= skill.nome %></span>
                                <span class="text-sm font-semibold text-blue-600 bg-blue-100 px-3 py-1 rounded-full"><%= skill.nivel %></span>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>

            <div>
                <h3 class="text-2xl font-semibold text-green-700 mb-6 flex items-center">
                     <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Habilidades Interpessoais (Soft Skills)
                </h3>
                <ul class="space-y-3">
                    <% dados.habilidades.softSkills.forEach(skill => { %>
                        <li class="bg-white p-4 rounded-lg shadow-md text-gray-800 flex items-center transition-all duration-300 hover:shadow-xl hover:scale-105">
                             <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            <%= skill %>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</section>


<%- include('partials/footer', { dados: dados }) %>
