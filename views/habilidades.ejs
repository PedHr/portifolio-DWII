<%- include('partials/header') %>

<section id="habilidades" class="my-5">
    <h2 class="text-center mb-4">Minhas Habilidades</h2>

    <div class="card mb-5 custom-card shadow-sm">
        <div class="card-body">
            <h3 class="card-title mb-3">Adicionar Nova Habilidade</h3>
            <form action="/habilidades" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="nome" class="form-label">Nome da Habilidade</label>
                        <input type="text" class="form-control" id="nome" name="nome" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="percentual" class="form-label">Nível de Proficiência (%)</label>
                        <input type="number" class="form-control" id="percentual" name="percentual" min="0" max="100" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Adicionar Habilidade</button>
            </form>
        </div>
    </div>

    <h3 class="mb-3">Habilidades Cadastradas</h3>
    <% habilidades.forEach(habilidade => { %>
        <div class="mb-3">
            <label class="form-label"><%= habilidade.nome %></label>
            <div class="progress" style="height: 25px;">
                <div class="progress-bar" role="progressbar" style="width: <%= habilidade.percentual %>%;" aria-valuenow="<%= habilidade.percentual %>" aria-valuemin="0" aria-valuemax="100"><%= habilidade.percentual %>%</div>
            </div>
            <div class="mt-2">
                <a href="/habilidades/<%= habilidade.id %>/edit" class="btn btn-sm btn-outline-primary">Editar</a>
                <form action="/habilidades/<%= habilidade.id %>/delete" method="POST" class="d-inline ms-1">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Tem certeza que deseja excluir esta habilidade?');">Excluir</button>
                </form>
            </div>
        </div>
        <hr>
    <% }) %>
</section>

<%- include('partials/footer') %>